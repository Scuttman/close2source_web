rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Project profiles (public read is optional)
    match /profiles/{code} {
      allow read: if true;
      allow update: if request.auth != null; // tighten later by role
    }
    
    // ── Individual profiles ─────────────────────────────
    match /individuals/{individualId} {
      allow create: if isSignedIn();
      allow read: if true; // or isSignedIn() if you want only signed-in users to read
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.ownerUid;
    }
    
    // Project profiles (public read is optional)
    match /projects/{allPaths=**} {
  		allow write: if request.auth != null;
  		allow read: if true;
		}

    // Updates and finance (require auth for now)
    match /updates/{id} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    match /finance/{id} {
      allow read, create: if request.auth != null;
    }
  }
}


